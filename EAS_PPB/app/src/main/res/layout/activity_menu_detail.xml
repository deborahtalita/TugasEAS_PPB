<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    android:orientation="vertical"
    tools:context=".activities.MenuDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageslider_MenuImageDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_period="2000" />

        <ImageButton
            android:id="@+id/imagebutton_BackMenuDetail"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="top|left"
            android:background="@null"
            android:src="@drawable/ic_left_arrow_white"/>

        <ToggleButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/myToggleButton"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="top|right"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""/>


    </FrameLayout>

    <TextView
        android:id="@+id/textview_MenuNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loading"
        android:textSize="25dp"
        android:fontFamily="@font/nunito_extrabold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="33dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:textColor="@color/grey_2"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/nunito_semibold"/>

    <TextView
        android:id="@+id/textview_MenuDescriptionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_white"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_medium"
        android:textSize="17dp"
        android:hint="Loading"/>

</LinearLayout>