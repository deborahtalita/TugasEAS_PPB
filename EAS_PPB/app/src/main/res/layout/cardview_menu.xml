<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardviewMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="25dp"
    app:cardUseCompatPadding="true"
    cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewMenuImage"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="0dp"
            android:layout_marginVertical="16dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageview_MenuImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textview_MenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginVertical="32dp"
            android:layout_toRightOf="@+id/cardviewMenuImage"
            android:text="Pepper Soup"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_extrabold"
            android:maxLines="1"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>